    <h1>My Projects</h1>

    <div id="project-list" class="project-container"></div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const projectList = document.getElementById("project-list");

        // Mendapatkan semua kunci proyek dari localStorage
        const projectKeys = Object.keys(localStorage).filter((key) =>
          key.startsWith("project_")
        );

        projectKeys.forEach((key) => {
          const projectData = JSON.parse(localStorage.getItem(key));

          const projectCard = document.createElement("div");
          projectCard.className = "project-card";

          // Membuat konten kartu proyek
          projectCard.innerHTML = `
          <img src="${projectData.imageSrc}" alt="${
            projectData.projectName
          }" style="max-width: 300px; max-height: 300px;" />
          <p><strong>Project Name:</strong> ${projectData.projectName}</p>
          <p><strong>Duration:</strong> ${projectData.duration}</p>
          <p><strong>Description:</strong> ${getShortDescription(
            projectData.description
          )}</p>
          <p><strong>Technologies:</strong> ${projectData.technologies}</p>
          <div class="actions">
            <button class="edit" data-key="${key}">Edit</button>
            <button class="delete" data-key="${key}">Delete</button>
          </div>
        `;

          projectList.appendChild(projectCard);
        });

        function getShortDescription(description) {
          const words = description.split(" ");
          return words.length > 10
            ? words.slice(0, 10).join(" ") + "......"
            : description;
        }

        // Event listener untuk tombol Delete
        projectList.addEventListener("click", (event) => {
          if (event.target.classList.contains("delete")) {
            const key = event.target.getAttribute("data-key");
            localStorage.removeItem(key);
            event.target.parentElement.parentElement.remove();
          }
          // Implementasi fungsi Edit jika diperlukan
        });
      });
    </script>
