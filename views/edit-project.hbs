<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Project</title>
    <style>
      *,
      body {
        margin: 0;
      }
      .hamburger-button {
        display: none;
      }

      .hamburger-container {
        display: flex;
        flex-direction: column;
        position: absolute;
        top: 78px;
        left: 0;
        width: 100%;
        margin: 0;
        padding: 0;
        z-index: 999;
        margin-bottom: 20px;
      }

      .hamburger-container a {
        text-align: center;
        background-color: rgba(238, 179, 51, 0.693);
        padding: 10px 0;
        border: 1px solid brown;
        width: 100%;
      }

      .hamburger-container .hamburger-active {
        background-color: brown;
        color: white;
      }

      .hamburger-hide {
        display: none;
      }
      @media screen and (max-width: 640px) {
        .navbar-container li a {
          display: none;
        }

        .hamburger-button {
          display: block;
        }
      }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/css/project.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
  </head>
  <body>
    <nav>
      <ul
        class="navbar-container"
        style="
          background-color: #ffeac5;
          list-style-type: none;
          display: flex;
          flex-direction: row;
          gap: 35px;
          align-items: center;
          padding: 10px;
          margin-bottom: 50px;
          white-space: nowrap;
          height: 78px;
        "
      >
        <li>
          <img
            src="https://dumbways.id/assets/images/brandred.png"
            style="
              width: 50px;
              height: 25px;
              object-fit: contain;
              margin-left: 60px;
            "
          />
        </li>
        <li>
          <a
            href="/"
            style="text-decoration: none; color: brown; font-weight: bold"
            >Home</a
          >
        </li>
        <li>
          <a
            href="/my-project"
            style="text-decoration: none; color: brown; font-weight: bold"
            >Add Project</a
          >
        </li>
        <li
          style="
            display: flex;
            width: 100%;
            justify-content: flex-end;
            margin-right: 60px;
          "
        >
          <button class="hamburger-button" onclick="toggleHamburger()">
            <i class="fa-solid fa-bars"></i>
          </button>
          <a
            href="/contact"
            style="
              text-decoration: none;
              background-color: brown;
              padding: 16px;
              color: white;
              border-radius: 20px;
            "
            >Contact Me</a
          >
        </li>
      </ul>
      <div id="hamburger-container" class="hamburger-container hamburger-hide">
        <a href="/" >Home</a>
        <a href="/my-project" class="hamburger-active">Add Project</a>
        <a href="/contact">Contact me</a>
      </div>
    </nav>
    <div class="container mt-5">
    <h1 class="text-center">Edit Project</h1>
  <div class="card">
    <div class="card-body">
      <form action="/edit-project/{{index}}" method="post">
        <div class="mb-3">
          <label for="project" class="form-label">Project Name</label>
          <input type="text" class="form-control" name="project" id="project" value="{{data.project}}"/>
        </div>
        
        <div class="row mb-3">
          <div class="col">
            <label for="start-date" class="form-label">Start Date</label>
            <input type="date" class="form-control" name="started" id="start-date" value="{{data.started}}"/>
          </div>
          <div class="col">
            <label for="end-date" class="form-label">End Date</label>
            <input type="date" class="form-control" name="completed" id="end-date" value="{{data.completed}}"/>
          </div>
        </div>
        
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea class="form-control" name="description" id="description" rows="4" >{{data.description}}</textarea>
        </div>
        
        <div class="mb-3">
          <h4>Technologies</h4>
          <div class="row">
            <div class="col-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="technology1" value="{{data.technology1}}" id="node-js">
                <label class="form-check-label" for="node-js">Node Js</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="technology2" value="{{data.technology2}}" id="react-js">
                <label class="form-check-label" for="react-js">React Js</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="technology3" value="{{data.technology3}}" id="next-js">
                <label class="form-check-label" for="next-js">Next Js</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="technology4" value="{{data.technology4}}" id="typescript">
                <label class="form-check-label" for="typescript">TypeScript</label>
              </div>
            </div>
          </div>
        </div>
        
        <div class="mb-3">
          <label for="upload" class="form-label">Upload File:</label>
          <input type="file" class="form-control" id="upload" name="upload" />
        </div>
        
        <button type="submit" class="btn btn-warning">Edit Project</button>
      </form>
    </div>
  </div>
</div>

    <script src="assets/js/project.js"></script>
    <script src="assets/js/nav.js"></script>
  </body>
</html>
